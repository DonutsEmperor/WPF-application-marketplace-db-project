<UserControl x:Class="AppWPF.CustomControls.Authorization"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:local="clr-namespace:AppWPF.CustomControls"
		mc:Ignorable="d"
		Height="450" Width="800">

    <Grid>
        <Label Content="Авторизация" HorizontalAlignment="Center" Margin="0,150,0,0" VerticalAlignment="Top" Height="50" Width="200"
			FontSize="28" HorizontalContentAlignment="Center"/>
		<TextBox HorizontalAlignment="Center" Margin="0,220,0,0" TextWrapping="Wrap" Text="Введите логин" VerticalAlignment="Top" Width="250" Height="30"
			HorizontalContentAlignment="Left" VerticalContentAlignment="Center" FontSize="16"/>
		<TextBox HorizontalAlignment="Center" Margin="0,270,0,0" TextWrapping="Wrap" Text="Введите пароль" VerticalAlignment="Top" Width="250" Height="30"
			HorizontalContentAlignment="Left" VerticalContentAlignment="Center" FontSize="16"/>
        <Button Content="Войти" HorizontalAlignment="Center" Margin="0,350,0,0" VerticalAlignment="Top" Height="30" Width="150"/>

        <Button Content="Вернуться" HorizontalAlignment="Right" Margin="0,0,10,10" VerticalAlignment="Bottom" Height="30" Width="85"
		Background="White"/>
	</Grid>
</UserControl>
