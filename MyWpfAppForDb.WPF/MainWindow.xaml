<Window x:Class="MyWpfAppForDb.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewmodel="clr-namespace:MyWpfAppForDb.WPF.ViewModels"
        xmlns:views="clr-namespace:MyWpfAppForDb.WPF.Views"
        xmlns:controls="clr-namespace:MyWpfAppForDb.WPF.Controls"
        mc:Ignorable="d"
        Title="Main" Height="650" Width="1000">

    <StackPanel Margin="15">

        <StackPanel.Resources>
            <Style TargetType="Button">
                <Setter Property="Height" Value="30" />
                <Setter Property="Width" Value="85" />
                <Setter Property="Background" Value="White"/>
            </Style>
        </StackPanel.Resources>

        <controls:NavigationBar/>

        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <ContentControl Content="{Binding CurrentViewModel}"/>
        </ScrollViewer>

        <!--<Button Content="Вернуться" Command="{Binding Return}" HorizontalAlignment="Right" Margin="0,0,10,10" VerticalAlignment="Bottom"/>-->

    </StackPanel>

</Window>
